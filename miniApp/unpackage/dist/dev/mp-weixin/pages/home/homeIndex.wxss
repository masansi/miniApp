.homeIndex {
  height: 100vh;
  padding: 20rpx 40rpx 0 40rpx;
  background-color: #FAFAFA;
}
.homeIndex .search {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  -webkit-border-radius: 40rpx;
          border-radius: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #D3D3D3;
  background-color: #F3F3F3;
}
.homeIndex .banner {
  margin-top: 40rpx;
  height: 300rpx;
  position: relative;
  width: 100%;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  overflow: hidden;
}
.homeIndex .banner swiper {
  height: 100%;
}
.homeIndex .banner swiper image {
  width: 100%;
  height: 100%;
}
.homeIndex .banner .radius {
  position: absolute;
  z-index: 2;
  bottom: 0;
  left: 0;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 40rpx;
}
.homeIndex .banner .radius .item {
  height: 15rpx;
  width: 15rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  background-color: #ffffff;
  margin-right: 20rpx;
}
.homeIndex .banner .radius .item.active {
  width: 30rpx;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
  background-color: #FFE031;
}

